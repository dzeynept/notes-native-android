<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profile_img"
        android:layout_width="160dp"
        android:layout_height="157dp"
        android:layout_marginBottom="59dp"
        android:layout_marginTop="47dp"
        android:background="@drawable/img_bg"
        app:layout_constraintBottom_toTopOf="@+id/editText3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/transparent" />


    <Button
        android:id="@+id/profile_save_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="95dp"
        android:layout_marginEnd="1dp"
        android:layout_marginStart="1dp"
        android:background="#309dff"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editText3"
        app:layout_constraintStart_toStartOf="@+id/profile_password"
        app:layout_constraintTop_toBottomOf="@+id/profile_password" />

    <TextView
        android:id="@+id/editText3"
        android:layout_width="209dp"
        android:layout_height="0dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/edt_bg"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Username"
        app:layout_constraintBottom_toTopOf="@+id/profile_uname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_img"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/profile_uname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:background="@drawable/edt_bg"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:hint="Name"
        app:layout_constraintBottom_toTopOf="@+id/profile_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText3" />

    <EditText
        android:id="@+id/profile_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:background="@drawable/edt_bg"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:hint="Password"
        app:layout_constraintBottom_toTopOf="@+id/profile_save_btn"
        app:layout_constraintStart_toStartOf="@+id/profile_uname"
        app:layout_constraintTop_toBottomOf="@+id/profile_uname" />

    <TextView
        android:id="@+id/uname_txt"
        android:layout_width="214dp"
        android:layout_height="29dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:background="#b8b8b8"
        app:layout_constraintBottom_toTopOf="@+id/profile_uname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_img" />
</android.support.constraint.ConstraintLayout>